<?xml version="1.0" encoding="UTF-8" ?>
<recipes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://it-academy.by/jd2018-11-13/seroglazov/recipes"
         xsi:schemaLocation="http://it-academy.by/jd2018-11-13/seroglazov/recipes recipes.xsd">
    <recipe cocktail_id="c1">
        <name>white lady</name>
        <tags>
            <tag>all day cocktail</tag>
        </tags>
        <ingredients>
            <ingredient>
                <id>i100</id>
                <amount>4</amount>
                <unit>cl</unit>
            </ingredient>
            <ingredient>
                <id>i104</id>
                <amount>3</amount>
                <unit>cl</unit>
            </ingredient>
            <ingredient>
                <id>i105</id>
                <amount>1</amount>
                <unit>slice</unit>
            </ingredient>
        </ingredients>
        <description>
            Add all ingredients into cocktail shaker filled with ice.
            Shake well and strain into large cocktail glass.
        </description>
    </recipe>
    <recipe cocktail_id="c2">
        <name>old fashioned</name>
        <tags>
            <tag>before dinner cocktail</tag>
        </tags>
        <ingredients>
            <ingredient>
                <id>i106</id>
                <amount>4.5</amount>
                <unit>cl</unit>
            </ingredient>
            <ingredient>
                <id>i108</id>
                <amount>2</amount>
                <unit>dash</unit>
            </ingredient>
            <ingredient>
                <id>i109</id>
                <amount>1</amount>
                <unit>cube</unit>
            </ingredient>
            <ingredient>
                <id>i110</id>
                <amount>few</amount>
                <unit>dash</unit>
            </ingredient>
            <ingredient>
                <id>i111</id>
                <amount>1</amount>
                <unit>slice</unit>
                <garnish>true</garnish>
            </ingredient>
            <ingredient>
                <id>i112</id>
                <amount>1</amount>
                <unit>piece</unit>
                <garnish>true</garnish>
            </ingredient>
        </ingredients>
        <description>
            Place sugar cube in old-fashioned glass and saturate with bitters, add a dash of plain water.
            Muddle until dissolve. Fill the glass with ice cubes and add whiskey.
            Garnish with orange slice and a cocktail cherry.
        </description>
    </recipe>
</recipes>